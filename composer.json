	"license"					: "MIT",

	"authors"					:
	[
		{ "name"					: "Nik Mennega" }
	],

	"autoload"					:
	{
		"classmap"					:
		[
			"uuid.php"
		]
	},

	"require"					:
	{
		"php"						: ">=5.6"
	},

	"require-dev"					:
	{
		"atoum/atoum"					: "^3.4"
	},

	"config"					:
	{
		"vendor-dir"					: "props"
	},

	"scripts"					:
	{
		"test"						: "php props/bin/atoum -c tests/.config.php -bf tests/.loader.php"
	},

	"scripts-descriptions"				:
	{
		"test"						: "Run unit tests."
	}
}
